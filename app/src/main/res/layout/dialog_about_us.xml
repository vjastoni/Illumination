<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutUsDialog"
    android:layout_width="wrap_content"
    android:layout_height="320dp"
    android:gravity="center"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_illu_test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#242953"
        android:layout_marginTop="6dp"
        android:text="Illmunination - Quiz Maker"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:textColor="#242953"
        android:layout_height="wrap_content"
        android:text="V 1.1.0"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#242953"
        android:layout_height="wrap_content"
        android:text="Copyright 2021 Test Maker"/>
    <TextView
        android:textColor="#242953"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All right reserved"/>

</LinearLayout>